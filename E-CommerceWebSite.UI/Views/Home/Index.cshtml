@model E_CommerceWebSite.UI.Models.HomeIndexViewModel
@{ 
    ViewBag.Title = "Anasayfa";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators1" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators2" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/img1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/img2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/img3.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!---------------------------------------------------------------------------------------------------------->

@if (Model.Products.Any())
{
    <div class="row">
        @foreach (Product item in Model.Products)
        {
            <div class="col-md-3 col-sm-6 mt-4 ml-5" style="border:1px solid green;">
                <div class="product-grid2">
                    <div class="product-image2">
                        <a href="#">
                            <img class="pic-1" src="@item.ProductImage">
                        </a>
                        <ul class="social">
                            <!--<li><a href="#" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>-->
                            <li><a href="#" data-tip="İstek Listesine Ekle"><i class="fa fa-shopping-bag"></i></a></li>
                            <li><a href="#" data-tip="Sepete Ekle"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                        <a class="add-to-cart" href="">Sepete Ekle</a>
                    </div>
                    <div class="product-content">
                        <h3 class="title font-weight-bold">@item.ProductName</h3>
                        <p class="price">
                            @item.ProductDescriptin
                        </p>
                        <hr />
                        <div class="form-group">
                            <a class="float-left">@item.Category.CategoryName</a>
                            <a class="float-right">@item.ProductPrice  TL</a>
                        </div>
                    </div>
                    <hr />

                    <div class="form-group">
                        <a class="btn btn-outline-success text-center">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Satışta ürün bulunamadı</p>
}

